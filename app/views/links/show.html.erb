<div class="row top-margin">
  <div class="col s6 offset-s3">
    <div class="link center">
      <h3><%= link_to @link.title, @link.url, target: '_blank'%></h3>
      <% if @link.read %>
        <h6>Read</h6>
      <% else %>
        <h6>Unread</h6>
      <% end %>
      <h5>created at: <%= @link.created_at.strftime("%m/%d/%Y at %I:%M%p") %></h5>
      <h5>updated on: <%= @link.updated_at.strftime("%m/%d/%Y at %I:%M%p") %></h5>
    </div>
  </div>
</div>
