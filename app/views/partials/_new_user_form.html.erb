<div class="center top-margin new-user">
  <h3>Sign up for an account here</h3>
  <%= form_for user do |f| %>
  <%= f.label 'username' %>
  <%= f.text_field 'username' %>
  <%= f.label 'email' %>
  <%= f.text_field 'email' %>
  <%= f.label 'password' %>
  <%= f.password_field 'password' %>
  <%= f.label 'password_confirmation' %>
  <%= f.password_field 'password_confirmation' %>
  <%= f.submit 'Create Account', class: 'btn blue' %>
  <% end %>
</div>
